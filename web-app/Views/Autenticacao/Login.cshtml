@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">

        <div class="card shadow-sm p-4 mt-5">

            <h3 class="text-center mb-4">
                <i class="bi bi-box-arrow-in-right"></i> Entrar no Sistema
            </h3>

            <form asp-action="Login" method="post">

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="seuemail@exemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Senha -->
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label fw-semibold"></label>
                    <input asp-for="Senha" class="form-control" type="password" placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>

                <!-- Lembrar-me -->
                <div class="form-check mb-3">
                    <input asp-for="LembrarMe" class="form-check-input" />
                    <label asp-for="LembrarMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                </button>

            </form>

            <div class="text-center mt-3">
                <a asp-controller="Autenticacao" asp-action="Registrar" class="text-decoration-none">
                    <i class="bi bi-person-plus"></i> Criar uma conta
                </a>
            </div>

        </div>

    </div>
</div>
