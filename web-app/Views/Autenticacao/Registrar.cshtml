@model RegistrarAdminViewModel

@{
    ViewData["Title"] = "Registrar";
}

<div class="row justify-content-center">
    <div class="col-md-4">

        <div class="card shadow-sm p-4 mt-5">

            <h3 class="text-center mb-4">
                <i class="bi bi-person-plus"></i> Criar Administrador
            </h3>

            <form asp-action="Registrar" method="post">

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="seuemail@exemplo.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Senha -->
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label fw-semibold"></label>
                    <input asp-for="Senha" class="form-control" type="password" placeholder="Digite uma senha forte" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>

                <!-- Confirmar senha -->
                <div class="mb-3">
                    <label asp-for="ConfirmarSenha" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmarSenha" class="form-control" type="password" placeholder="Repita a senha" />
                    <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">
                    <i class="bi bi-arrow-right-circle"></i> Registrar
                </button>

            </form>

        </div>

    </div>
</div>
