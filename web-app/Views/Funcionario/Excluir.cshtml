@model ExcluirFuncionarioViewModel;

@{
    ViewBag.Titulo = "Exclusão de Funcionário";
}
 
<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Titulo</h2>
    </div>

    <div class="card-body">

        <form asp-controller="Funcionario" asp-action="Excluir" method="post">

            <input type="hidden" asp-for="Id" />

            <p class="text-danger">
                Tem certeza que deseja excluir o funcionário <strong>@Model.Nome</strong>?
            </p>

            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-controller="Funcionario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>

        </form>

    </div>
</div>
