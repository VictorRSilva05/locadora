@model CadastrarFuncionarioViewModel;

@{
    ViewBag.Titulo = "Cadastro de Funcionário";
}

<a asp-controller="Funcionario" asp-action="Index">Voltar</a>
<form asp-controller="Funcionario" asp-action="Cadastrar" method="post">
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

        <label asp-for="DataAdmissao"></label>
        <input asp-for="DataAdmissao" type="date" />
        <span asp-validation-for="DataAdmissao"></span>

        <label asp-for="Salario"></label>
        <input asp-for="Salario" />
        <span asp-validation-for="Salario"></span>
    </div>
    <button type="submit">Cadastrar</button>
    </form>