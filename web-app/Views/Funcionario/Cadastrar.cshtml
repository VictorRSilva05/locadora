@model CadastrarFuncionarioViewModel;

@{
    ViewBag.Titulo = "Cadastro de Funcionário";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Cadastrar Funcionário</h2>

        <a asp-controller="Funcionario" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-controller="Funcionario" asp-action="Cadastrar" method="post">

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataAdmissao" class="form-label"></label>
                    <input asp-for="DataAdmissao" type="date" class="form-control" />
                    <span asp-validation-for="DataAdmissao"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salario" class="form-label"></label>
                    <input asp-for="Salario" class="form-control" />
                    <span asp-validation-for="Salario"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    Cadastrar
                </button>
            </form>
        </div>
    </div>
