@model DetalhesFuncionarioViewModel;

@{
    ViewBag.Titulo = "Detalhes do Funcionário";
}
<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Titulo</h2>
    </div>

    <div class="card-body">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" readonly disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" readonly disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DataAdmissao"></label>
            <input asp-for="DataAdmissao" type="date" readonly disabled class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Salario"></label>
            <input asp-for="Salario" readonly disabled class="form-control" />
        </div>
        <a asp-controller="Funcionario" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
    </div>
</div>