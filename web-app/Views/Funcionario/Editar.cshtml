@model EditarFuncionarioViewModel;

@{
    ViewBag.Titulo = "Edição de Funcionário";
}

<a asp-controller="Funcionario" asp-action="Index">Voltar</a>
<form asp-controller="Funcionario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
        <label asp-for="DataAdmissao"></label>
        <input asp-for="DataAdmissao" type="date" />
        <span asp-validation-for="DataAdmissao"></span>
        <label asp-for="Salario"></label>
        <input asp-for="Salario" />
        <span asp-validation-for="Salario"></span>
    </div>
    <button type="submit">Salvar</button>
</form>