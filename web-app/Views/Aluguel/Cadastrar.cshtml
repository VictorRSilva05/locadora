@model CadastrarAluguelViewModel

@{
    ViewBag.Titulo = "Cadastrar Aluguel";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Cadastrar Aluguel</h2>

        <a asp-controller="Condutor" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-controller="Aluguel" asp-action="Cadastrar" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="Condutor" class="form-label">Condutor</label>
                    <select asp-for="Condutor" asp-items="Model.CondutoresDisponiveis" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Condutor"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cliente" class="form-label">Cliente</label>
                    <select asp-for="Cliente" asp-items="Model.ClientesDisponivies" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Cliente"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cobranca" class="form-label">Cobrança</label>
                    <select asp-for="Cobranca" asp-items="Model.CobrancasDisponivies" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Cobranca"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Veiculo" class="form-label">Veículo</label>
                    <select asp-for="Veiculo" asp-items="Model.VeiculosDisponiveis" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Veiculo"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataSaida" class="form-label">Data saída</label>
                    <input asp-for="DataSaida" type="date" class="form-control" />
                    <span asp-validation-for="DataSaida"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataRetornoPrevista" class="form-label">Data de retorno prevista</label>
                    <input asp-for="DataRetornoPrevista" type="date" class="form-control" />
                    <span asp-validation-for="DataRetornoPrevista"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Taxas" class="form-label">Taxas</label>
                    <select asp-for="Taxas" asp-items="Model.TaxasDisponiveis" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Taxas"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    Cadastrar
                </button>
            </form>
        </div>
    </div>
</div>
