@model EditarTaxaViewModel

@{
    ViewBag.Titulo = "Editar Taxa / Serviço";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Editar Taxa</h2>

        <a asp-controller="Taxa" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="Id" />

                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
                <br />

                <label asp-for="Valor" class="form-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
                <br />

                <label asp-for="PlanoCobranca"></label>
                <select asp-for="PlanoCobranca" asp-items="Model.PlanosCobrancaDisponiveis" class="form-control"></select>
                <span asp-validation-for="PlanoCobranca" class="text-danger"></span>
                <br />

                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
            </form>
        </div>
    </div>
</div>