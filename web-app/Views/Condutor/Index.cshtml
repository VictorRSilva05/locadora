@model VisualizarCondutorViewModel

@{
    ViewBag.Titulo = "Condutores";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Condutores</h2>

        <a asp-controller="Condutor" asp-action="Cadastrar" class="btn btn-primary">
            + Cadastrar Condutor
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">

            @if (!Model.Registros.Any())
            {
                <div class="alert alert-info">
                    Nenhum condutor encontrado.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>Nome</th>
                            <th class="text-end">Ações</th>
                        </tr>
                        <tbody>
                            @foreach (var registro in Model.Registros)
                            {
                                <tr>
                                    <td>@registro.Nome</td>
                                    <td>
                                        <a asp-controller="Condutor" asp-action="Editar" asp-route-id="@registro.Id"
                                           class="btn btn-sm btn-outline-primary me-2">
                                            Editar
                                        </a>

                                        <a asp-controller="Condutor" asp-action="Detalhes" asp-route-id="@registro.Id"
                                           class="btn btn-sm btn-outline-info me-2">
                                            Detalhes
                                        </a>

                                        <a asp-controller="Condutor" asp-action="Excluir" asp-route-id="@registro.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            }

        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

</div>
