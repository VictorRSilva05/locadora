@model CadastrarCondutorViewModel;

@{
    ViewBag.Titulo = "Cadastro de Condutor";
}

<a asp-controller="Condutor" asp-action="Index">Voltar</a>
<form asp-controller="Condutor" asp-action="Cadastrar" method="post">
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>

         <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" />
        <span asp-validation-for="Telefone"></span>

        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" />
        <span asp-validation-for="Cpf"></span>

        <label asp-for="Cnh"></label>
        <input asp-for="Cnh" />
        <span asp-validation-for="Cnh"></span>

        <label asp-for="Validade"></label>
        <input asp-for="Validade" type="date" />
        <span asp-validation-for="Validade"></span>
    </div>
    <button type="submit">Cadastrar</button>
</form>