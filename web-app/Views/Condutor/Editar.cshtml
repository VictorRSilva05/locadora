@model EditarCondutorViewModel;

@{
    ViewBag.Titulo = "Edição de Condutor";
}

<a asp-controller="Condutor" asp-action="Index" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left-circle"></i> Voltar
</a>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Edição de Condutor</h5>
    </div>

    <div class="card-body">
        <form asp-controller="Condutor" asp-action="Editar" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Cpf" class="form-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Cnh" class="form-label"></label>
                    <input asp-for="Cnh" class="form-control" />
                    <span asp-validation-for="Cnh" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Validade" class="form-label"></label>
                    <input asp-for="Validade" type="date" class="form-control" />
                    <span asp-validation-for="Validade" class="text-danger"></span>
                </div>

            </div>

            <button type="submit" class="btn btn-success mt-4">
                <i class="bi bi-check-circle"></i> Salvar
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
