@model DetalhesCondutorViewModel;

@{
    ViewBag.Titulo = "Detalhes do Condutor";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Titulo</h2>
    </div>

    <div class="card-body">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" readonly disabled class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" readonly disabled class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Telefone"></label>
            <input asp-for="Telefone" readonly disabled class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Cpf"></label>
            <input asp-for="Cpf" readonly disabled class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Cnh"></label>
            <input asp-for="Cnh" readonly disabled class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Validade"></label>
            <input asp-for="Validade" type="date" readonly disabled class="form-control" />
        </div>

        <a asp-controller="Condutor" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
    </div>
</div>
