@model ExcluirGrupoVeiculoViewModel

@{
    ViewBag.Titulo = "Excluir Grupo de Veículo";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">Excluir Grupo de Veículo</h2>

        <a class="btn btn-outline-secondary" asp-controller="GrupoVeiculo" asp-action="Index">
            Voltar
        </a>
    </div>

    <div class="card border-danger shadow-sm rounded-3">
        <div class="card-body">

            <div class="alert alert-danger">
                Tem certeza que deseja excluir este Grupo de Veículo?
            </div>

            <form asp-controller="GrupoVeiculo" asp-action="Excluir" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" disabled />
                </div>

                <button type="submit" class="btn btn-danger">
                    Excluir
                </button>

            </form>

        </div>
    </div>

</div>
