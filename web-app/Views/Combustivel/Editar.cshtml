@model EditarCombustivelViewModel

@{
    ViewBag.Titulo = "Editar Combustível";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Editar Combustível</h2>

        <a asp-controller="Combustivel" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">

            <form asp-controller="Combustivel" asp-action="Editar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>

            </form>

        </div>
    </div>

</div>
