@model ExcluirCombustivelViewModel;

@{
    ViewBag.Titulo = "Excluir combustível";
}

<a asp-controller="Combustivel" asp-action="Index">Voltar</a>
<form asp-controller="Combustivel" asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" disabled />
    </div>
    <button type="submit">Excluir</button>
</form>