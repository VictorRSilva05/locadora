@model VisualizarClienteViewModel;

@{
    ViewBag.Titulo = "Clientes";
    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">@ViewBag.Titulo</h2>
        <a asp-action="Cadastrar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Cadastrar Cliente
        </a>
    </div>

    <div class="card-body">

        @if (Model.Registros.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th class="text-end">Ações</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registro in Model.Registros)
                    {
                        <tr>
                            <td>@registro.Nome</td>
                            <td>@registro.Email</td>
                            <td>
                                <a asp-action="Editar"
                                   asp-route-id="@registro.Id"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a asp-action="Excluir"
                                   asp-route-id="@registro.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>

                                <a asp-action="Detalhes"
                                   asp-route-id="@registro.Id"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-search"></i> Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Nenhum cliente cadastrado.</p>
        }

        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>

    </div>
</div>
