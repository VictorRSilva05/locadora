@model VisualizarClienteViewModel;

@{
    ViewBag.Titulo = "Clientes";
    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">@ViewBag.Titulo</h2>
        <a asp-action="Cadastrar" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Cadastrar Cliente
        </a>
    </div>

    <div class="card-body">

        @if (Model.Registros.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registro in Model.Registros)
                    {
                        <tr>
                            <td>@registro.Nome</td>
                            <td>
                                <a asp-controller="Cliente" asp-action="Detalhes" asp-route-id="@registro.Id"
                                   class="btn btn-info btn-sm me-1">Detalhes</a>

                                <a asp-controller="Cliente" asp-action="Editar" asp-route-id="@registro.Id"
                                   class="btn btn-primary btn-sm me-1">Editar</a>

                                <a asp-controller="Cliente" asp-action="Excluir" asp-route-id="@registro.Id"
                                   class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Nenhum cliente cadastrado.</p>
        }

        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>

    </div>
</div>
