@using Locadora.Dominio.ModuloCliente
@model Locadora.WebApp.Models.DetalhesClienteViewModel

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>Detalhes do Cliente</h2>

<div class="card mt-3">
    <div class="card-body">

        <h4 class="mb-3">
            @(Model.TipoCliente == TipoClienteEnum.PessoaFisica ? "Pessoa Física" : "Pessoa Jurídica")
        </h4>

        <dl class="row">

            <!-- TIPO -->
            <dt class="col-sm-3">Tipo de Cliente</dt>
            <dd class="col-sm-9">
                @(Model.TipoCliente == TipoClienteEnum.PessoaFisica ? "Pessoa Física" : "Pessoa Jurídica")
            </dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>

            <dt class="col-sm-3">Cidade</dt>
            <dd class="col-sm-9">@Model.Cidade</dd>

            <dt class="col-sm-3">Bairro</dt>
            <dd class="col-sm-9">@Model.Bairro</dd>

            <dt class="col-sm-3">Rua</dt>
            <dd class="col-sm-9">@Model.Rua</dd>

            <dt class="col-sm-3">Numero</dt>
            <dd class="col-sm-9">@Model.Numero</dd>

            <!-- CAMPOS PF -->
            @if (Model.TipoCliente == TipoClienteEnum.PessoaFisica)
            {
                <dt class="col-sm-3">CPF</dt>
                <dd class="col-sm-9">@Model.CPF</dd>

                <dt class="col-sm-3">RG</dt>
                <dd class="col-sm-9">@Model.RG</dd>

                <dt class="col-sm-3">CNH</dt>
                <dd class="col-sm-9">@Model.CNH</dd>
            }

            <!-- CAMPOS PJ -->
            @if (Model.TipoCliente == TipoClienteEnum.PessoaJuridica)
            {
                <dt class="col-sm-3">CNPJ</dt>
                <dd class="col-sm-9">@Model.CNPJ</dd>
            }

            <!-- EMPRESA VINCULADA (SOMENTE PF) -->
            @if (Model.TipoCliente == TipoClienteEnum.PessoaFisica)
            {
                <dt class="col-sm-3">Empresa Vinculada</dt>
                <dd class="col-sm-9">
                    @if (Model.PJ != null)
                    {
                        @Model.PJ
                    }
                    else
                    {
                        <span class="text-muted">Nenhuma</span>
                    }
                </dd>
            }

        </dl>

        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>

    </div>
</div>
