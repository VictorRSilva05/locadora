@model Locadora.WebApp.Models.ExcluirClienteViewModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2 class="mb-3">Excluir Cliente</h2>

<div class="alert alert-danger">
    <strong>Atenção!</strong> Você está prestes a excluir o cliente <strong>@Model.Nome</strong>.
    <br />
    Esta ação não pode ser desfeita.
</div>

<form asp-action="Excluir" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input class="form-control" value="@Model.Nome" disabled />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
