@model VisualizarCobrancaViewModel;

@{
    ViewBag.Titulo = "Cobrancas";

    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="m-0">@ViewBag.Titulo</h2>

    <a asp-action="Cadastrar" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Cadastrar Cobrança
    </a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Grupo</th>
            <th>Plano</th>
            <th class="text-end">Ações</th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var registro in Model.Cobrancas)
{
            <tr>
                <td>@registro.GrupoVeiculo</td>
                <td>@registro.PlanoCobranca</td>
                <td>
                    <a asp-action="Editar"
                       asp-route-id="@registro.Id"
                       class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>

                    <a asp-action="Excluir"
                       asp-route-id="@registro.Id"
                       class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </a>

                    <a asp-action="Detalhes"
                       asp-route-id="@registro.Id"
                       class="btn btn-sm btn-outline-primary me-1">
                        <i class="bi bi-search"></i> Detalhes
                    </a>
                </td>
            </tr>
}
    </tbody>
</table>


<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i>
        Voltar
    </a>
</div>
