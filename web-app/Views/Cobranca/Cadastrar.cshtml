@model CadastrarCobrancaViewModel

@{
    ViewBag.Titulo = "Cadastrar Cobrança";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Cadastrar Cobrança</h2>

        <a asp-controller="Cobranca" asp-action="Index" class="btn btn-outline-secondary">
            Voltar
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">

            <form asp-controller="Cobranca" asp-action="Cadastrar" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="GrupoVeiculo" class="form-label">Grupo de veículo</label>
                    <select asp-for="GrupoVeiculo" asp-items="Model.GrupoVeiculosDisponiveis" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="GrupoVeiculo"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PlanoCobranca" class="form-label">Plano de cobrança</label>
                    <select asp-for="PlanoCobranca" asp-items="Model.PlanosCobrancaDisponiveis" class="form-control">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="PlanoCobranca"></span>
                </div>


                <div id="pd">
                    <div class="mb-3">
                        <label asp-for="PrecoDiaria" class="form-label"></label>
                        <input asp-for="PrecoDiaria" class="form-control" />
                        <span asp-validation-for="PrecoDiaria"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PrecoKm" class="form-label"></label>
                        <input asp-for="PrecoKm" class="form-control" />
                        <span asp-validation-for="PrecoKm"></span>
                    </div>
                </div>

                <div id="pc">
                    <div class="mb-3">
                        <label asp-for="PrecoDiaria" class="form-label"></label>
                        <input asp-for="PrecoDiaria" class="form-control" />
                        <span asp-validation-for="PrecoDiaria"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="KmDisponiveis" class="form-label"></label>
                        <input asp-for="KmDisponiveis" class="form-control" />
                        <span asp-validation-for="KmDisponiveis"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PrecoPorKmExtrapolado" class="form-label">Preço por Km extrapolado</label>
                        <input asp-for="PrecoPorKmExtrapolado" class="form-control" />
                        <span asp-validation-for="PrecoPorKmExtrapolado"></span>
                    </div>
                </div>

                <div id="pl">
                    <div class="mb-3">
                        <label asp-for="Taxa" class="form-label"></label>
                        <input asp-for="Taxa" class="form-control" />
                        <span asp-validation-for="Taxa"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    Cadastrar
                </button>
            </form>
        </div>
    </div>
</div>

