@model ExcluirCobrancaViewModel;

@{
    ViewBag.Titulo = "Excluir Cobranca";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Titulo</h2>
    </div>

    <div class="card-body">

        <form asp-controller="Cobranca" asp-action="Excluir" method="post">
            <input type="hidden" asp-for="Id" />

            <p class="text-danger">
                Tem certeza que deseja excluir a cobrança <strong>@Model.GrupoVeiculo / @Model.PlanoCobranca</strong>?
            </p>

            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-controller="Cobranca" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
