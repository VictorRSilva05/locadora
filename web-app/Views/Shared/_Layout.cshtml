<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo | Locadora</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom Theme -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom mb-4">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Locadora</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a asp-controller="Cliente" asp-action="Index" class="nav-link"><i class="bi bi-person-lines-fill"></i> Clientes</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Veiculo" asp-action="Index" class="nav-link"><i class="bi bi-car-front-fill"></i> Veículos</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Aluguel" asp-action="Index" class="nav-link"><i class="bi bi-calendar-check-fill"></i> Aluguéis</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="GrupoVeiculo" asp-action="Index" class="nav-link"><i class="bi bi-grid-3x3-gap-fill"></i> G.Veículos</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Combustivel" asp-action="Index" class="nav-link"><i class="bi bi-fuel-pump-fill"></i> Combustíveis</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Funcionario" asp-action="Index" class="nav-link"><i class="bi bi-people-fill"></i> Funcionários</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Condutor" asp-action="Index" class="nav-link"><i class="bi bi-person-vcard-fill"></i> Condutores</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Taxa" asp-action="Index" class="nav-link"><i class="bi bi-cash-coin"></i> Taxas</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Cobranca" asp-action="Index" class="nav-link"><i class="bi bi-receipt-cutoff"></i> Cobrança</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer>
        Sistema de Locadora — @DateTime.Now.Year
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
